@page
@model SkyDrive.Pages.Files.HomeModel

<h2>Files</h2>

<h4>Upload a File</h4>
<a class="btn btn-default" asp-page="./Upload">Upload</a>
<hr>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.FileMapping[0].File)
            </th>
            <th>
                Download or Delete
            </th>
            <th>
                Share this file
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.FileMapping)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.File)
                </td>
                <td>
                    <form asp-controller="File" asp-action="DownloadFile" asp-route-id=@item.ID method="post" style="display: inline">
                        <button type="submit" class="btn btn-default">Download</button>
                    </form>
                    <a asp-page="./Delete" asp-route-id="@item.ID" class="btn btn-default" style="display: inline">Delete</a>
                </td>
                <td>
                    <form asp-controller="File" asp-action="ShareFile" asp-route-id=@item.ID method="post">
                        <input class="form-check-input" placeholder="SharedEmail" name="SharedEmail" />
                        <input class="btn btn-default" type="submit" value="Share" />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
